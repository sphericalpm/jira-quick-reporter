QLabel#issue_title_label{
    font-weight: bold;
}

QPushButton#issue_menu_btn{
    border: none;
    font-size: 12pt;
    font-weight: bold;
}

QListWidget::item{
    border-bottom: 1px solid lightgray
}

QListWidget::item::text{
    color:transparent;
}

QLabel#label_error{
    color: red;
}

QLabel#label_title{
    font-size: 14pt;
    margin: 10%;
}

QLineEdit#error_field{
    border: 1px solid red;
}

QLabel#time_label{
    font-size: 30pt;
}

QProgressBar{
    height: 10pt;
    border: 2px solid darkgray;
    border-radius: 5px;
}

QProgressBar::chunk {
    background-color: darkred;
}

QProgressBar::chunk#break {
    background-color: green;
}

QLabel#issue_label{
    font-size: 18pt;
    color: darkred;
}

QLabel#issue_label_break{
    font-size: 18pt;
    color: green;
}

QLabel#pomodoros_count{
    font-size:16pt;
}

QLabel#break_label{
    font-size: 16pt;
}
